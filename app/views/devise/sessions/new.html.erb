<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="col-md-6 col-md-offset-3">
      <h1>Log in</h1>

      <div class="field">
        <%= f.label :email, for: "user_email" %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter Email" %>
      </div>
      
      <div class="field">
        <%= f.label :password, for: "user_password" %><br/>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Enter Password" %>
      </div>

      <div class="actions">
        <%= f.button "Log in" %>
      </div> 
    </div>
  </div>  
<% end %>
