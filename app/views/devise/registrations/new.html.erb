<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="container">
    <div class="col-md-6 col-md-offset-3">
      <h1>Sign Up</h1>

      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email, for: "user_email" %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter Email" %>
      </div>

      <div class="field">
        <%= f.label :password, for: "user_password" %><br/>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Enter Password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, for: "user_password_confirmation" %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Repeat Password" %>
      </div>

      <div class="actions clearfix">
        <%= f.button "Sign up" %>
      </div>
    </div>
  </div>
<% end %>
